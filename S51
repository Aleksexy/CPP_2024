#include <iostream>


using namespace std;

// Функция для вывода строки в отражённом виде
string reverse(string str) {
    for (int i = str.length() - 1; i >= 0; --i) {
        cout << str[i]; // Выводим символы в обратном порядке
    }
}

int main() {

    string input;
    setlocale(0,"Russian");

    // Ввод строки
    cout << "Введите строку(На английском): ";
    cin >> input;

    // Вывод отражённой строки
    cout << "Отражённая строка: ";
    reverse(input);

    return 0;
}
