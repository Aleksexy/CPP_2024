#include <iostream>

using namespace std;

int main(){

    int in=20;
    float b=20.54545454545;

    cout<< in/7 <<"\t"<< in/ 3<<"\n"; // Деление нацело может сделать тип переменных int, который отбрасывает остаток от деления оставляя целую часть

    cout<< in%8<<"\t"<< in % 6<<"\n"; // выяснить остаток от деления поможет % который выводит целочисляный остаток
    return 0;
}
