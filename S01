#include <iostream>

using namespace std;

int main(){
    int in=20;
    float fl = 5.3445454545454545454545;
    string st = "Fa";
    bool bl = true;

    cout<< in/2 <<"\t"<< in/ 3<<"\t"<< in*3<<"\t"<<in+in<<"\n";//Int тип целочисленных переменных.С ним можно производить математические операции такие как: деления, умножение
    // Важно понимать что если деление получается не целочисленным то остаток просто убирается без округления

    cout<< fl<<"\t"<<in/fl<<"\n";// float также можно делить и умножать но он может принимать дробные значения до 5 знаков после запятой.
    // также если поделить переменную int на float то результат будет в форме float

    cout<<st<<"\t"<<st+st<<"\n";//тип переменных string принимает текстовый вид и выводится в текстовом виде. Также текст можно сумировать

    cout<<bl<<"\t"<< bl - 1; //Bool логический тип переменных и имеет вид True и false(1 и 0). Используется в основном для проверки условий


    return 0;
}
